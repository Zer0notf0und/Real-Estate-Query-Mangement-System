<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listings</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="stylesheets/listings.css">
    <script defer src="javascripts/home.js"></script>

 
</head>

<body>
    <div class="topnav" id="topnav">
        <div id="sitename" class="sitename">
            <p><u>Raghav Estates</u></p>
        </div>
        <a href="/">Home</a>
        <a href="listings">Listings</a>
        <a href="login">Log In</a>
        <a href="about.html">About</a>
    </div>
    <div class="container">
        <div class="left">
            <form method="post" action="searchListing">
                <div id="inputs" class="inputs">
                    <input type="text" id="search" name="name" class="search" placeholder="Search"><br><br>
                    
                    <legend>Type:</legend>
                    <label>
                        <input type="radio" name="typename" id="Type" value="Villa">
                        Villa
                        <br>
                    </label>
                    <label>
                        <input type="radio" name="typename" id="Type" value="Apartment">
                        
                        Apartments
                    </label>
                    <label>
                        <input type="radio" name="typename" id="Type" value="Rental">
                        Rent
                    </label>
                    <label>
                        <input type="radio" name="typename" id="Type" value="PG">
                        P.G.
                    </label> 
                    

                </div><br>
                <button type="submit" id="searchbutton" class="searchbutton">Search</button>
            </form>
        </div>
        <div>
            <h1>Listing Results:</h1>
            <div id="listing1" class="listings">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <td>Name</td>
                        <td>Description</td>
                        <td>Address</td>
                        <td>Price</td>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(item){ %>
                        <tr>
                            <td> <%- item["name"] %></td>
                            <td> <%- item["description"] %></td>
                            <td> <%- item["address"] %></td>
                            <td> <%- item["price"] %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>

</html>